@model Produto

    <meta name="viewport" content="width=device-width" />
    <title>Alterar</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />


    <h2>Aleterar os dados</h2>

    <form asp-action="Alterar">
        <div class="form-group">
            <label>Id:</label>
            <input type="hidden" class="form-control col-md-3"  asp-for="ProdutoId" />

            <input type="text" class="form-control col-md-3" asp-for="ProdutoId" readonly="" />
        </div>
        <div class="form-group">
            <label>Nome:</label>
            <input type="text" class="form-control col-md-3" asp-for="Nome" />
        </div>

        <div class="form-group">
        <label>Descrição:</label>
        <input type="text" class="form-control col-md-3" asp-for="Descricao" />
        </div>

        <div  class="form-group">
        <label>Preço:</label>
        <input type="text" class="form-control col-md-3" asp-for="Preco" />
        </div>

        <div class="form-group">
            <label>Quantidade:</label>
            <input type="text" class="form-control col-md-3" asp-for="Quantidade" />
        </div>
        <input type="submit" value="Salvar" class=" btn btn-outline-warning btn-lg" />
    </form>


